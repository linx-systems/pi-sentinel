{
  "name": "pisentinel",
  "version": "0.0.1",
  "description": "Firefox MV3 extension for Pi-hole v6 integration",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "lint": "eslint entrypoints utils background --ext .ts,.tsx",
    "lint:ext": "web-ext lint --source-dir=dist/firefox-mv3",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:setup": "cat tests/e2e/RUN_WITH_EXTENSION.md",
    "test:all": "npm run test:unit && npm run test:e2e",
    "package": "bun run build && cd dist/firefox-mv3 && zip -r ../../pisentinel.xpi .",
    "sign": "bun run build && web-ext sign --source-dir=dist/firefox-mv3 --api-key=$AMO_API_KEY --api-secret=$AMO_API_SECRET",
    "sign:channel": "bun run build && web-ext sign --source-dir=dist/firefox-mv3 --api-key=$AMO_API_KEY --api-secret=$AMO_API_SECRET --channel=unlisted",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@preact/preset-vite": "^2.10.2",
    "@resvg/resvg-js": "^2.6.2",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitest/ui": "^4.0.17",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "happy-dom": "^20.3.0",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.17",
    "web-ext": "^9.2.0",
    "wxt": "^0.20.13"
  },
  "dependencies": {
    "preact": "^10.25.4",
    "webextension-polyfill": "^0.12.0"
  }
}
